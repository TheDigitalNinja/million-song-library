<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>msl-models</groupId>
    <artifactId>msl-models</artifactId>
    <packaging>jar</packaging>
    <version>4.0.0</version>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>${exec-maven-plugin.version}</version>

                <executions>
                    <!-- PARSE SWAGGER SRC -->
                    <execution>
                        <id>npm run parse-swagger-src</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>pre-clean</phase>
                        <configuration>
                            <executable>npm</executable>
                            <workingDirectory>../client</workingDirectory>
                            <arguments>
                                <argument>run</argument>
                                <argument>parse-swagger-src</argument>
                            </arguments>
                        </configuration>
                    </execution>

                    <!-- GENERATE MODELS -->
                    <execution>
                        <id>swagger codegen generator</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>clean</phase>
                        <configuration>
                            <executable>java</executable>
                            <arguments>
                                <argument>-XX:MaxPermSize=256M</argument>
                                <argument>-Xmx1024M</argument>

                                <argument>-Dmodels</argument>
                                <argument>-DsupportingFiles</argument>

                                <argument>-jar</argument>
                                <argument>${swagger-codegen-cli-jar}</argument>

                                <argument>generate</argument>

                                <!--Yaml swagger specification file-->
                                <argument>-i</argument>
                                <argument>${yaml-spec}</argument>
                                <!--Specifies language-->
                                <argument>-l</argument>
                                <argument>jaxrs</argument>
                                <!--Output-->
                                <argument>-o</argument>
                                <argument>${output-directory}</argument>
                                <!--Configuration-->
                                <argument>-c</argument>
                                <argument>${json-configuration-file}</argument>

                            </arguments>
                        </configuration>
                    </execution>

                    <!-- BUILD JAR -->
                    <execution>
                        <id>build dependency</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>initialize</phase>
                        <configuration>
                            <executable>mvn</executable>
                            <workingDirectory>${output-directory}</workingDirectory>
                            <arguments>
                                <argument>clean</argument>
                                <argument>package</argument>
                            </arguments>

                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- INSTALL DEPENDENCY LOCALLY -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>${maven-install-plugin.version}</version>
                <configuration>
                    <groupId>msl.models</groupId>
                    <artifactId>models</artifactId>
                    <version>1.0.0</version>
                    <packaging>jar</packaging>
                    <file>${output-directory}/target/swagger-jaxrs-server-1.0.0.jar</file>
                    <generatePom>false</generatePom>
                </configuration>
                <executions>
                    <execution>
                        <id>install-jar-lib</id>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <phase>compile</phase>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

    <properties>
        <swagger-codegen-cli-jar>../common/swagger-codegen-cli.jar</swagger-codegen-cli-jar>
        <json-configuration-file>../client/swagger/package.json</json-configuration-file>
        <yaml-spec>../client/swagger/api/swagger/swagger.yaml</yaml-spec>
        <output-directory>models</output-directory>

        <exec-maven-plugin.version>1.3.2</exec-maven-plugin.version>
        <maven-compiler-plugin.version>3.3</maven-compiler-plugin.version>
        <maven-install-plugin.version>2.5.1</maven-install-plugin.version>
    </properties>

</project>
