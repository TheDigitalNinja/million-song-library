    "babel-loader": "^5.3.2",
    "babel-runtime": "^5.8.3",
    "bourbon": "^4.2.5",
    "bourbon-neat": "^1.7.2",
    "bourbon-sass-loader": "^0.1.0",
    "bower": "^1.4.1",
    "clean-webpack-plugin": "^0.1.3",
    "css-loader": "^0.15.5",
    "es5-shim": "^4.1.10",
    "eslint": "^0.24.1",
    "eslint-loader": "^0.14.2",
    "express": "^4.13.3",
    "extract-text-webpack-plugin": "^0.8.2",
    "file-loader": "^0.8.4",
    "html-loader": "^0.3.0",
    "html-webpack-plugin": "^1.6.0",
    "http-server": "^0.8.0",
